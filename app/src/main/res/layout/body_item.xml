<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_view_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:paddingBottom="2dp"
  >

    <TextView
        android:id="@+id/pricecut"
        android:layout_width="99dp"
        android:layout_height="39dp"
        android:layout_below="@+id/imageView"
        android:text="10.99 AED"
        android:textColor="#000" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-150dp"
        android:layout_toStartOf="@+id/pricecut"
        android:text="20% OFf" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/currentprice"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pricecut"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="Buy now"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:id="@+id/itemname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentprice"
        android:text="Leather Bag"
        android:textSize="20dp" />

</RelativeLayout>